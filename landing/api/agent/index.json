{
  "name": "loctree",
  "version": "0.5.2",
  "tagline": "Scan once, slice many.",
  "description": "AI-oriented codebase analyzer. Use BEFORE reading files manually.",
  "install": "curl -fsSL https://raw.githubusercontent.com/LibraxisAI/loctree/main/tools/install.sh | sh",
  "commands": {
    "scan": {
      "cmd": "loctree",
      "desc": "Scan project, create .loctree/snapshot.json"
    },
    "ai_overview": {
      "cmd": "loctree --for-ai",
      "desc": "Project overview optimized for AI (JSON)"
    },
    "slice": {
      "cmd": "loctree slice <file> --consumers --json",
      "desc": "Extract file context with dependencies for AI"
    },
    "check_similar": {
      "cmd": "loctree -A --check <Name>",
      "desc": "Find similar existing components before creating new"
    },
    "find_symbol": {
      "cmd": "loctree -A --symbol <Name>",
      "desc": "Find symbol definitions and usage"
    },
    "circular": {
      "cmd": "loctree -A --circular",
      "desc": "Detect circular import cycles"
    },
    "dead_code": {
      "cmd": "loctree -A --dead",
      "desc": "Find unused exports"
    },
    "impact": {
      "cmd": "loctree -A --impact <file>",
      "desc": "What breaks if file is removed"
    },
    "trace": {
      "cmd": "loctree trace <handler>",
      "desc": "Investigate Tauri handler FEâ†”BE usage"
    }
  },
  "workflows": {
    "before_new_component": ["check_similar", "find_symbol"],
    "before_refactor": ["slice", "impact", "circular"],
    "debugging_tauri": ["trace", "scan"]
  },
  "links": {
    "docs": "https://docs.rs/loctree",
    "github": "https://github.com/LibraxisAI/loctree",
    "crates": "https://crates.io/crates/loctree"
  }
}
